<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <% if flash[:notice] %>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
        <% end %>
	<% if flash[:error] %>
          <div class="error">
            <%= flash[:error] %>
          </div>
	<% end %>
	<% if flash[:success] %>
	  <div class="success">
	    <%= flash[:success] %>
	  </div>
	<% end %>
	<% if flash[:alert] %>
	  <div class="alert">
	    <%= flash[:alert] %>
	  </div>
	<% end %>
        <h1>User info</h1>
        <%= attachment_image_tag @user, :profile_image, size:"60x60", format:"jpeg", fallback:"no_image.jpeg" %>
        <table class="table">
          <tbody>
            <tr>
              <th><label>name</label></th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th><label>Introduction</label></th>
              <th><%= @user.introduction %>
            </tr>
          </tbody>
        </table>
        <div class="row">
         <% if @user.id == current_user.id %>
           <%= link_to "", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
         <% else %>
           <%= link_to "", user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
         <% end %>
	</div>
	<div class="row">
	  <%= render 'relationships/follow', user: @user, follow: @follow %>
	</div>
　　　  <h3>New book</h3>
	 <%= form_for(@book) do |f| %>
	   <% if @book.errors.any? %>
                <%= @book.errors.count %>件のエラーが発生しました
                <% @book.errors.full_messages.each do |message| %>
                  <%= message %>
                <% end %>
           <% end %>
	   <div class="field row">
             <h5>Title</h5>
             <%= f.text_field :title, class:"col-xs-12 book_title" %>
	   </div>
	   <div class="field row">
             <h5>Opinion</h5>
             <%= f.text_area :body, class:"col-xs-12 book_body" %>
	   </div>
	   <div class:"actions row">
	     <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
	   </div>   
         <% end %>
      </div>
      <div class="col-lg-9">
         <h1>Books</h1>
         <table class="table">
	 <thead>
	   <tr>
	     <th></th>
	     <th>Title</th>
	     <th>Opinion</th>
	     <th colspan="3"></th>
	   </tr>
	 </thead>
	 <tbody>
	  <% @user.books.each do |book|%>
	    <tr>
	      <td><%= attachment_image_tag @user, :profile_image, size:"60x60", format:'jpeg', fallback:"no_image.jpg" %></td>
	      <td><%= link_to "#{book.title}", book_path(book.id) %></td>
	      <td><%= book.body %></td>
	    </tr>
	  <% end %>
	</tbody>
       </table>
      </div>
    </div>
  </div>
</div>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
