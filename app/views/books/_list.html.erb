<h1>User info</h1>
  <%= user.attachment_image_tag, :profile_image %>
  <label>Name</label>
  <%= user.name %>
  <label>Introduction</label>
  <%= user.introduction %>
  <if user.id == current_user.id>
   <%= link_to edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
  <else>
  	<%= link_to user_path(user.id) class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
<h3>New book</h3>
  <%= form_for(new_book) do |f| %>
    <h5>Title</h5>
     <%= f.text_field :title %>
     <h5>Opinion</h5>
     <%= f.text_area :body %>
     <%= f.submit "Create Book" %>
  <% end %>