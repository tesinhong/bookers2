<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
	<% if flash[:error] %>
          <div class="error">
            <%= flash[:error] %>
          </div>
        <% end %>
        <h1>Editing book</h1>
	<%= form_for(@book) do |f| %>
	  <% if @book.errors.any? %>
            <%= @book.errors.count %>件のエラーが発生しました
            <% @book.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          <% end %>
	  <div class="field row">
	    <label>Title</label>
	    <%= f.text_field :title, class:"col-xs-12 book_title" %>
	  </div>
	  <div class="field row">
            <label>Opinion</label>
            <%= f.text_area :body, class:"col-xs-12 book_body" %>
          </div>
	  <div class="actions row">
	    <%= f.submit "Update book", class:"btn btn-primary col-xs-12" %>
	  </div>
	<% end %>
	<%= link_to "show", book_path(@book) %>
	<%= link_to "back", books_path %>
      </div>
      <div class="col-md-3">
      </div>
    </div>
  </div>
</div>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
