<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <% if flash[:notice] %>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
        <% end %>
        <h1>User info</h1>
       <%= attachment_image_tag @b_user, :profile_image, size:"60x60", format:"jpeg", fallback:"no_image.jpeg" %>
        <table class="table">
          <tbody>
            <tr>
              <th><label>name</label></th>
              <th><%= @b_user.name %></th>
            </tr>
            <tr>
              <th><label>Introduction</label></th>
              <th><%= @b_user.introduction %>
            </tr>
          </tbody>
        </table>
	<div class="row">
          <% if @b_user.id == current_user.id %>
            <%= link_to "", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          <% else %>
            <%= link_to "", user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          <% end %>
        </div>
　　　  <h3>New book</h3>
	<%= form_for(@new_book) do |f| %>
	  <div class="field row">
            <label>Title</label>
            <%= f.text_field :title, class:"col-xs-12 book_title" %>
	  </div>
	  <div class="field row">
            <label>Opinion</label>
	    <%= f.text_area :body, class:"col-xs-12 book_body" %>
	  </div>
	  <div class="actions row">
	    <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
	  </div>
        <% end %>
      </div>
      <div class="col-lg-9">
	<h2>Book detail</h2>
          <table class="table">
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, format:'jpeg', fallback:"no_image.jpg", size:"60x60" %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
                <% if @b_user.id == current_user.id %>
            	  <td><%= link_to "Edit", edit_book_path(@book), class:"btn-sm btn-success" %></td>
            	  <td><%= link_to "Destroy", book_path(@book), method: :delete, class:"btn-sm btn-danger" %></td>
		<% else %>
		  <td><%= link_to "Edit", books_path, class:"btn-sm btn-success" %></td>
		  <td><%= link_to "Destroy", books_path, class:"btn-sm btn-danger" %></td>
		<% end %>
           </tr>
         </table>
      </div>
    </div>
  </div>
</div>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
