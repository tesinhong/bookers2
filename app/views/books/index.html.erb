<div class="container">
  <div class="row">
    <div class="col-lg-3">
	<% if flash[:notice] %>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
        <% end %>
	<% if flash[:error] %>
	  <div class="error">
	    <%= flash[:error] %>
	  </div>
	<% end %>
       <h1>User info</h1>
       <%= attachment_image_tag @user, :profile_image, size:"60x60", format:"jpeg", fallback:"no_image.jpeg" %>
       <table class="table">
         <tbody>
           <tr>
             <th><label>name</label></th>
             <th><%= @user.name %></th>
           </tr>
           <tr>
             <th><label>Introduction</label></th>
             <th><%= @user.introduction %>
           </tr>
         </tbody>
       </table>
       <div class="row">
         <% if @user.id == current_user.id %>
           <%= link_to "", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
         <% else %>
  	   <%= link_to user_path(current_user.id) %>
         <% end %>
       </div>
　　　   <h3>New book</h3>
           <%= form_for(@book) do |f| %>
	     <div class="field row">
               <label>Title</label>
               <%= f.text_field :title, class:"col-xs-12 book_title" %>
	     </div>
	     <div class="field row">
               <label>Opinion</label>
               <%= f.text_area :body, class:"col-xs-12 book_body" %>
	     </div>
             <div class="actions row">
               <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
	     </div>
           <% end %>
    </div>
    <div class="col-lg-9">
      <p>検索</p>
      <%= form_tag books_path, :method => 'get' do %>
        <%= text_field_tag :search %>
	<%= submit_tag 'Search', :title => nil %>
      <% end %>
      <ul>
        <%= render 'search', search:@search %>
      </ul>
      <table class="table table-hover table-inverse">
	<thead>
    	  <tr>
	    <th></th>
      	    <th>Title</th>
      	    <th>Opinion</th>
	    <th colspan="3"></th>
    	  </tr>
  	</thead> 
	<tbody>
	  <% @books.each do |a| %>
	    <tr>
	      <td><%= attachment_image_tag @b_user, :profile_image, format:'jpeg', fallback:"no_image.jpg", size:"60x60" %></td>
	      <td><%= link_to "#{a.title}", book_path(a.id) %>
		<% if @book.favorited_by?(current_user) %>
                    <li style="list-style:none;">
                        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                        <%= a.favorites.count %> いいね
                    </li>
                <% else %>
                    <li style="list-style:none;">
                        <i class="fa fa-heart-o" aria-hidden="true"></i>
                        <%= a.favorites.count %> いいね
                    </li>
                <% end %>
	      </td>
              <td><%= a.body %></td>
	    </tr>
	  <% end %>
	</tbody>
      </table>
    </div>
  </div>
</div>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
