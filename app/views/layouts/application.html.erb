<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <div class="container">
          <nav class="nav navbar-nav navbar-left">
            <span class="bookers">bookers</span>
          </nav>
          <nav>
      	    <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
         	<li class="">
          	  <%= link_to "Home", user_path(current_user.id), class:"glyphicon glyphicon-home home", style:"padding-top:15px; padding-bottom:15px; color:#9d9d9d; font-size:13px;" %>
          	</li>
          	<li class="">
            	  <%= link_to "Users", users_path, class:"glyphicon glyphicon-user users", style:"padding-top:15px; padding-bottom:15px; color:#9d9d9d; font-size:13px;" %>
          	</li>
          	<li class="">
            	  <%= link_to "Books", books_path, class:"glyphicon glyphicon-book books", style:"padding-top:15px; padding-bottom:15px; color:#9d9d9d; font-size:13px;" %>
          	</li>
          	<li class="">
            	  <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out logout", style:"padding-top:15px; padding-bottom:15px; color:#9d9d9d; font-size:13px;" %>
          	</li>
              <% else %>
          	<li class="">
            	  <%= link_to 'Home', root_path, class:"glyphicon glyphicon-home home",  style:"padding-top:15px; padding-bottom:15px; color:#9d9d9d; font-size:13px;" %>
          	</li>
          	<li class="">
            	  <%= link_to 'About', homes_about_path, class:"glyphicon glyphicon-link about", style:"padding-top:15px; padding-bottom:15px; color:#9d9d9d; font-size:13px;" %>
          	</li>
          	<li class="">
            	  <%= link_to "Sign up", new_user_registration_path, class:"glyphicon glyphicon-edit sign_up", style:"padding-top:15px; padding-bottom:15px; color:#9d9d9d; font-size:13px;" %>
          	</li>
          	<li class="">
            	  <%= link_to "Sign in", new_user_session_path, class:"glyphicon glyphicon-log-in sign_in", style:"padding-top:15px; padding-bottom:15px; color:#9d9d9d; font-size:13px;" %>
          	</li>
              <% end %>
            </ul>
     	  </nav>
        </div>
    </header>
    <%= yield %>
  </body>
</html>
