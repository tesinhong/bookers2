<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <% if flash[:error] %>
          <div class="error">
            <%= flash[:error] %>
          </div>
        <% end %>
        <h1>Editing comment</h1>
	<%= form_for [@book, @book_comment] do |f| %>
	  <div class="field row">
	    <label>コメント</label>
	    <%= f.text_area :comment, rows:'5', class:"col-xs-12" %>
	  </div>
	  <div class="actions row">
	    <%= f.submit "Update!", class:"btn btn-primary col-xs-12" %>
	  </div>
	<% end %>
      </div>
      <div class="col-md-3">
      </div>
    </div>
  </div>
</div>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

